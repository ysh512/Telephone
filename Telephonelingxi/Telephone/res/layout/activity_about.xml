<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/layout_bg"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_activity_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.4"
            android:background="@color/tab_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8.0dip"
                android:text="@string/about_version"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <View style="@style/line_h"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                     />

                <TextView
                    android:id="@+id/tv_uprage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_bg_item"
                    android:drawableRight="@drawable/ic_check_version"
                    android:paddingBottom="12.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="12.0dip"
                    android:text="检查更新"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize16" />

                <View
                    style="@style/line_h"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20.0dip" />

                <RelativeLayout
                    android:id="@+id/rlyt_wap"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_bg_item"
                    android:paddingBottom="12.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="12.0dip"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_web"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize16" />

                    <TextView
                        android:id="@+id/tv_wap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize16" />
                </RelativeLayout>

                <View
                    style="@style/line_h"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20.0dip" />

                <RelativeLayout
                    android:id="@+id/tv_servicer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_bg_item"
                    android:paddingBottom="12.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="12.0dip"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize16" />

                    <TextView
                        android:id="@+id/tv_serverphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize16" />
                </RelativeLayout>

                <View
                    style="@style/line_h"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20.0dip" />

                <RelativeLayout
                    android:id="@+id/tv_qq"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_bg_item"
                    android:paddingBottom="12.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="12.0dip" 
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_qq"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize16" />

                    <TextView
                        android:id="@+id/tv_serverqq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize16" />
                </RelativeLayout>

                <View
                    style="@style/line_h"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20.0dip"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_guide"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sl_bg_item"
                    android:drawableRight="@drawable/ic_arrow_profile"
                    android:paddingBottom="12.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="16.0dip"
                    android:paddingTop="12.0dip"
                    android:text="@string/guide"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize16"
                    android:visibility="gone" />
            </LinearLayout>

            <View style="@style/line_h"
                  android:layout_width="match_parent"
                  android:layout_height="0.5dip" />

            <TextView
                android:id="@+id/tv_company_copyright"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:background="@color/tab_bg"
                android:gravity="bottom|center"
                android:paddingBottom="6.0dip"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>
        <TextView 
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Copyright @2006-2016 \n郑州帝纳尔电子科技有限公司"
            />
        
    </LinearLayout>    
</RelativeLayout>