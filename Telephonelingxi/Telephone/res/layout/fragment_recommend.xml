<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_m_ad"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#00000000"
                android:flipInterval="30"
                android:persistentDrawingCache="animation" />

        
        <com.example.telphone.extendview.MarqueeButton
            android:id="@+id/marquee_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingBottom="5.0dip"
            android:paddingLeft="@dimen/dimen_5dip"
            android:paddingRight="@dimen/dimen_5dip"
            android:paddingTop="5.0dip"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="帝迅通贺岁版隆重推出，敬请试用！"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize16"
            android:textStyle="bold" 
            android:background="@color/bg_gray"/>
        

            <RelativeLayout
                android:id="@+id/rl_rcmd_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dimen_15dip"
                    android:text="@string/rcmd_achievement_detail"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize16"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_rcmd_achievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_15dip"
                    android:text="@string/rcmd_achievement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize16" />

                <TextView
                    android:id="@+id/tv_rcmd_amt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_rcmd_achievement"
                    android:paddingLeft="@dimen/dimen_15dip"
                    android:text=""
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_rcmd_amt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_rcmd_amt_1"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_rcmd_amt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_rcmd_amt_1"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dimen_15dip"
                    android:text=""
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_rcmd_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_rcmd_amt_1"
                    android:paddingLeft="@dimen/dimen_15dip"
                    android:paddingTop="@dimen/dimen_15dip"
                    android:text="@string/rcmd_recharge_people"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize16" />

                <TextView
                    android:id="@+id/tv_rcmd_people_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_rcmd_people"
                    android:paddingLeft="@dimen/dimen_15dip"
                    android:paddingTop="@dimen/dimen_15dip"
                    android:text=""
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_rcmd_people_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_rcmd_people_1"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_rcmd_people_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_rcmd_people_2"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dimen_15dip"
                    android:text=""
                    android:textColor="@color/gray" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_15dip"
                android:background="@color/layout_bg" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_lib_rcmd_url"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_15dip"
                    android:paddingTop="@dimen/dimen_15dip"
                    android:text="@string/rcmd_url"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize16" />

                <TextView
                    android:id="@+id/tv_rcmd_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sl_bg_tst_red"
                    android:paddingBottom="@dimen/dimen_10dip"
                    android:paddingLeft="@dimen/dimen_15dip"
                    android:paddingRight="@dimen/dimen_5dip"
                    android:paddingTop="@dimen/dimen_10dip"
                    android:text="@string/rcmd_copy_url"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize16" />

                <View
                    android:id="@+id/v_rcmd_li"
                    android:layout_width="0.5dip"
                    android:layout_height="20.0dip"
                    android:layout_marginTop="12.0dip"
                    android:background="@color/red"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_rcmd_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sl_bg_tst_red"
                    android:paddingBottom="@dimen/dimen_10dip"
                    android:paddingLeft="@dimen/dimen_5dip"
                    android:paddingRight="@dimen/dimen_15dip"
                    android:paddingTop="@dimen/dimen_10dip"
                    android:text="@string/rcmd_share_url"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize16"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_rcmd_url"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_lib_rcmd_url"
                    android:paddingBottom="@dimen/dimen_15dip"
                    android:paddingLeft="@dimen/dimen_15dip"
                    android:paddingTop="@dimen/dimen_12dip"
                    android:text=""
                    android:textColor="@color/gray" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_15dip"
                android:background="@color/layout_bg" />

            <TextView
                android:id="@+id/tv_rcmd_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_3dip"
                android:padding="@dimen/dimen_15dip"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>