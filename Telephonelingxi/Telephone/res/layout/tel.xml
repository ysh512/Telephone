<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv_r_records"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:scrollbars="none">
    </ListView>

    <LinearLayout
        android:id="@+id/ll_tel_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B5B6B5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ib_num_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_19"
                android:tag="1" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/num_29"
                android:tag="2" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_39"
                android:tag="3" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ib_num_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_49"
                android:tag="4" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/num_59"
                android:tag="5" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_69"
                android:tag="6" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ib_num_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_79"
                android:tag="7" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/num_89"
                android:tag="8" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_99"
                android:tag="9" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ib_num_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_x9"
                android:tag="*" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/num_09"
                android:tag="0" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ib_num_j"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/num_j9"
                android:tag="#" >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>