<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.3"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.55"
        android:orientation="vertical" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/reg_phone"
            android:inputType="phone"
            android:maxLength="13"
            android:singleLine="true"
            android:text=""
            android:textColor="@drawable/sl_color_facus_w"
            android:textColorHint="@drawable/sl_color_facus_w"
            android:textSize="@dimen/textsize16" />

        <View style="@style/line_h" />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/reg_pwd"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@drawable/sl_color_facus_w"
            android:textColorHint="@drawable/sl_color_facus_w"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/bt_login"
            style="@style/button_once"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="35.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/sl_bt_login"
            android:text="@string/login_login" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="6.0dip" >

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10.0dip"
                android:text="@string/find_pwd"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize14"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10.0dip"
                android:text=""
                android:textColor="@color/text5_color"
                android:textSize="@dimen/textsize14"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20.0dip"
        android:background="@drawable/bg_border_round_red"
        android:paddingBottom="10.0dip"
        android:paddingLeft="18.0dip"
        android:paddingRight="18.0dip"
        android:paddingTop="10.0dip"
        android:text="@string/reg_bt"
        android:textColor="@color/red"
        android:textSize="@dimen/textsize16"
        android:visibility="invisible" />

</LinearLayout>