<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv_r_records"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:scrollbars="none">
    </ListView>

    <LinearLayout
        android:id="@+id/ll_tel_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ib_num_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_key_1"
                android:background="@drawable/sl_bg_key"
                android:tag="1" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
				android:src="@drawable/ic_key_2"
				android:background="@drawable/sl_bg_key"
                android:tag="2" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_3"
				android:background="@drawable/sl_bg_key"
                android:tag="3" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ib_num_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_4"
				android:background="@drawable/sl_bg_key"
                android:tag="4" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
				android:src="@drawable/ic_key_5"
				android:background="@drawable/sl_bg_key"
                android:tag="5" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_6"
				android:background="@drawable/sl_bg_key"
                android:tag="6" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ib_num_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_7"
				android:background="@drawable/sl_bg_key"
                android:tag="7" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
				android:src="@drawable/ic_key_8"
				android:background="@drawable/sl_bg_key"
                android:tag="8" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_9"
				android:background="@drawable/sl_bg_key"
                android:tag="9" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ib_num_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_set"
				android:background="@drawable/sl_bg_key"
                android:tag="*" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
				android:src="@drawable/ic_key_0"
				android:background="@drawable/sl_bg_key"
                android:tag="0" >
            </ImageView>

            <ImageView
                android:id="@+id/ib_num_j"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
				android:src="@drawable/ic_key_del"
				android:background="@drawable/sl_bg_key"
                android:tag="#" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>