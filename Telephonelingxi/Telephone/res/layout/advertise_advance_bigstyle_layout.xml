<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/content_head_bar" android:layout_width="fill_parent" android:layout_height="@dimen/notification_height" layout="@layout/advertise_normal_layout" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/content_head_bar">
        <ImageView android:id="@id/notification_big_icon" android:layout_width="fill_parent" android:layout_height="@dimen/bigpicture_height" android:src="@drawable/ic_launcher" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/download_detail_height" android:layout_alignBottom="@id/notification_big_icon">
            <LinearLayout android:gravity="center" android:background="@color/button_background__black_color" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:id="@id/download_img" android:layout_width="@dimen/download_detail_img" android:layout_height="@dimen/download_detail_img" android:src="@drawable/pushadvertise_download" />
                <Button android:textSize="@dimen/download_detail_fontSize" android:textColor="@color/common_text_color_download_detail" android:id="@id/notification_download_btn" android:background="@color/button_background__transparent" android:layout_width="wrap_content" android:layout_height="@dimen/download_detail_height" android:text="@string/pushadvertise_download" />
            </LinearLayout>
            <LinearLayout android:background="@color/vertical_line_background_black" android:layout_width="@dimen/vertical_line" android:layout_height="fill_parent" />
            <LinearLayout android:gravity="center" android:background="@color/button_background__black_color" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
                <ImageView android:id="@id/detail_img" android:background="@color/button_background__black_color" android:layout_width="@dimen/download_detail_img" android:layout_height="@dimen/download_detail_img" android:src="@drawable/pushadvertise_detail" />
                <Button android:textSize="@dimen/download_detail_fontSize" android:textColor="@color/common_text_color_download_detail" android:id="@id/notification_detail_btn" android:background="@color/button_background__transparent" android:layout_width="wrap_content" android:layout_height="@dimen/download_detail_height" android:text="@string/pushadvertise_detail" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>